<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/admin/header" %>
  </head>

  <body>
    <% if !Rails.env.production? %>
      <div class="environment_badge"><%= Rails.env %></div>
    <% end %>

    <div id="wrapper">
      <%= render "layouts/admin/menu" %>
      <%= render "layouts/admin/locale" %>

      <div id="loading"><img src="/assets/app/admin/img/spinner_min.gif" /></div>

      <div id="content" class="container">
        <h1 class="page-title"><%= yield(:title) %></h1>

        <% flash.each do |type, message| %>
          <%= content_tag :div, BlueCloth.new(message).to_html.html_safe, :id => "flash_#{type}", :class => twitterized_type(type) %>
        <% end %>

        <%= yield %>
      </div>
    </div>

    <%= render "layouts/admin/footer" %>
    <%= render "shared/analytics" %>
  </body>
</html>

