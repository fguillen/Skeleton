<% title (t "views.admin_user_sessions.forgot_password.title") %>

<ol class="breadcrumb">
  <li class="active"><%= (t "layouts.breadcrumbs.admin_user_sessions") %></li>
</ol>

<p class="lead">
  <%= t "views.admin_user_sessions.forgot_password.text" %>
</p>

<%= form_for [:admin, @admin_user_session], :url => admin_forgot_password_path, :html => { :class => "form-horizontal" } do |f| %>
  <legend>Forgot password</legend>

  <p>Add your email and you will receive a reset password instructions</p>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>

    <div class="col-sm-10">
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
        <%= f.text_field :email, :class => "form-control", :type => "email" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Reset password", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
