<% title (t "views.admin_user_sessions.new.title") %>

<ol class="breadcrumb push_down">
  <li class="active"><%= (t "layouts.breadcrumbs.login_admin") %></li>
</ol>

<%= form_for [:admin, @admin_user_session], :html => { :class => "form-horizontal" } do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>

  <fieldset>
    <legend><%= "Use your credentials" %></legend>

    <div class="form-group">
      <%= f.label :email, :class => "col-sm-2 control-label" %>

      <div class="col-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
          <%= f.text_field :email, :class => "form-control", :type => "email" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, :class => "col-sm-2 control-label" %>

      <div class="col-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
          <%= f.password_field :password, :class => "form-control", :type => "password" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign in", :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>

  <p><%= link_to "Forgot password", admin_forgot_password_path %></p>
<% end %>


