<% title t("views.items.show.title", :item_title => @item.title) %>

<ol class="breadcrumb">
  <li><%= link_to (t "layouts.breadcrumbs.items"), :admin_items %></li>
  <li class="active"><%= @item.title %></li>
</ol>

<div class="row">
  <div class="col-md-4"><%= @item.text.to_md %></div>
  <div class="col-md-8">
    <ul>
      <% @item.pics.each do |pic| %>
        <li>
          <%= image_tag pic.attach(:front_big) %>
          <p><%= pic.title %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>

